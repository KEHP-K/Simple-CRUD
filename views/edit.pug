extends layout
block content
    //- navigation
    nav(class="navbar navbar-expand-md navbar-dark fixed-top bg-dark")
        div(class="container-fluid")
            a(href="/" class="navbar-brand") Opsilo
            div(class="collapse navbar-collapse")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item active")
                        a(href="/" class="nav-link") Home
                    li(class="nav-item active")
                        a(href="/" class="nav-link") Board
    
    div(class="container")
        br
        h1(class="display-3") Edit Post
        hr(class="featurette-divider")
        form(method="POST" action=`/${post.id}`)
            input(type="hidden" name="_method" value="PUT")
            div(class="input-group mb-2")
                span(class="input-group-text") Title
                input(type="text" class="form-control" name="title" placeholder="title" value=post.title)
            div(class="input-group mb-2")
                span(class="input-group-text") Author
                input(type="text" class="form-control" name="author" placeholder="Author" value=post.author)
            div(class="input-group mb-3")
                span(class="input-group-text") Content
                textarea(class="form-control" name="content" rows=12) #{post.content}
            a(href=`/${post.id}` class="btn btn-secondary") Back
            input(type="submit" class="btn btn-primary float-end" value="OK")